<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
  <%= image_tag "languages/#{I18n.locale.to_s.downcase}_50x32_roundCorner.png" %>
  <span class="caret"></span>
</a>
<ul class="dropdown-menu">
  <% I18n.available_locales.each do |l| %>
      <% if l != I18n.locale %>
          <li><%= link_to image_tag("languages/#{l.to_s.downcase}_50x32_roundCorner.png"), {:locale => l.to_s} %></li>
      <% end %>
  <% end %>
</ul>